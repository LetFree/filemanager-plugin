{
  "name": "filemanager-plugin",
  "version": "2.7.1",
  "description": "Filemanager-plugin allows you to delete, zip/unzip(.zip/.tar/.tar.gz), move, rename, copy files or directories before and after webpack/rollup builds. Also, you can customize the lifecycle of webpack or rollup during building.",
  "main": "lib/index.js",
  "files": [
    "lib",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xianweics/filemanager-plugin.git"
  },
  "keywords": [
    "webpack",
    "rollup",
    "file manager",
    "nodejs",
    "glob"
  ],
  "engines": {
    "node": ">= 10.16.0",
    "webpack": ">= 4.0.0"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xianweics/filemanager-plugin/issues"
  },
  "homepage": "https://github.com/xianweics/filemanager-plugin#readme",
  "scripts": {
    "install:source": "npm i",
    "install:demo-webpack": "cd example/webpack && npm i",
    "install:demo-rollup": "cd example/rollup && npm i",
    "install:demo-vite": "cd example/vite-demo && npm i",
    "dev:install": "node_modules/npm-run-all/bin/npm-run-all/index.js -p install:*",
    "source:clean": "node_modules/rimraf/bin.js lib",
    "source:build": "node_modules/rollup/dist/bin/rollup -c rollup.config.js",
    "build": "node_modules/npm-run-all/bin/npm-run-all/index.js -s source:clean source:build",
    "test": "node_modules/jest/bin/jest.js",
    "test:watch": "npm test -- --watch",
    "test:watchAll": "npm test -- --watchAll",
    "test:coverage": "npm run test -- --collectCoverage",
    "doc": "jsdoc -c conf.json",
    "format:lint": "eslint 'src/**/*.js'",
    "format:fix": "eslint  --fix 'src/**/*.js'"
  },
  "pre-commit": [
    "format:lint"
  ],
  "dependencies": {
    "colors": "^1.4.0",
    "compressing": "^1.5.1",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.16.3",
    "@babel/plugin-transform-modules-commonjs": "^7.16.5",
    "@rollup/plugin-commonjs": "^21.0.1",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.4.1",
    "eslint-friendly-formatter": "^4.0.1",
    "jest": "^27.4.5",
    "jsdoc": "^3.6.7",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.61.0",
    "rollup-plugin-eslint": "^7.0.0",
    "tui-jsdoc-template": "^1.2.2",
    "webpack": "^5.65.0"
  }
}
